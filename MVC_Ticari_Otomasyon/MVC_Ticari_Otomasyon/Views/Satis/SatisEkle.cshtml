@model MVC_Ticari_Otomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />

<form class="form-group" method="post">
    Ürün
    @Html.DropDownListFor(x => x.Urunid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.Cariid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.Label("Personel")
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    Adet
    @Html.TextBoxFor(x => x.SatisHareketAdedi, new { @class = "form-control",@type="number" })
    <br />
    Fiyat
    @Html.TextBoxFor(x => x.SatisHareketFiyati, new { @class = "form-control", @type = "number" })
    <br />
    Toplam Tutar
    @Html.TextBoxFor(x => x.SatisHareketToplamTutari, new { @class = "form-control", @type = "number" })
    <br />
    <button class="btn btn-success">Kaydet</button>
    <a href="/Satis/SatisListesi" class="btn btn-info" style="background-color:darkcyan; color:aliceblue;">Satış Listesi</a>
</form>

