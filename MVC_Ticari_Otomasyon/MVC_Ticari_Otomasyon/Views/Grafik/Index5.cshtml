<h2>Ürün - Stok Grafiği Pie</h2>


<!DOCTYPE html>

<html lang="en">

<head>

    <title>Google Chart Kullanımı</title>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script>

        $(document).ready(function () {

            $.ajax({

                type: 'POST',

                dataType: "json",

                contentType: "application/json",

                url: '@Url.Action("VisualizeUrunResult2", "Grafik")',

                success: function (result) {

                    google.charts.load('current', {

                        'packages': ['corechart']

                    });

                    google.charts.setOnLoadCallback(function () {

                        drawChart(result);

                    });

                }

            });

        });



        function drawChart(result) {

            var data = new google.visualization.DataTable();

            data.addColumn('string', 'Name');

            data.addColumn('number', 'Stok Miktarı');

            var dataArray = [];



            $.each(result, function (i, obj) {

                dataArray.push([obj.urunAd, obj.stok]);

            });

            data.addRows(dataArray);



            var columnChartOptions = {

                title: "Ürün - Stok Grafiği",

                width: 1200,

                height: 800,

                bar: { groupWidth: "20%" },

            };



            var columnChart = new google.visualization/*.LineChart*//*.ColumnChart*/.PieChart(document

                /*.getElementById('columnchart_div'));*/
                /*.getElementById('Linecolumnchart_div'));*/
                .getElementById('Piecolumnchart_div'));

            columnChart.draw(data, columnChartOptions);

        }

    </script>

</head>

<body>

    @*<div id="columnchart_div"></div>*@
    @*<div id="Linecolumnchart_div"></div>*@
