@using MVC_Ticari_Otomasyon.Models.Siniflar
@model List<Cari>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Cariler Hover Tablosu</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Aranacak kelime...">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Cari Adı</th>
                            <th>Cari Soyadı</th>
                            <th>Cari Şehri</th>
                            <th>Cari Maili</th>
                            <th>Cari Durumu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int sayac = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@{sayac += 1;} @sayac</td>
                                <td>@item.CariAdi</td>
                                <td>@item.CariSoyadi</td>
                                <td>@item.CariSehir</td>
                                <td>@item.CariMaili</td>
                                <td>
                                    @{ var durum = "";}
                                    @if (item.CariDurumu)
                                    {
                                        durum = "Aktif";
                                    }
                                    else
                                    {
                                        durum = "Pasif";
                                    }
                                    @durum
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>